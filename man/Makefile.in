datarootdir=@datarootdir@
prefix=@prefix@
mandir=@mandir@
man_MANS=bf2long.3 bf2str.3 bf2int.3 bfand.3 bfcat.3 bfclone.3 bfcmp.3 bfcpy.3 bfhamming.3 bfisempty.3 bfnew.3 bfpopcount.3 bfpos.3 bfprint.3 bfresize.3 bfrev.3 bfsetall.3 bfsetbit.3 bfshift.3 bfsize.3 bfsub.3 bitfield.3 bfnormalize.3

install:
	mkdir -p $(DESTDIR)$(mandir)/man3
	for i in $(man_MANS); do install -m 644 $$i $(DESTDIR)$(mandir)/man3/$$i; done
	ln -s bfnew.3 $(DESTDIR)$(mandir)/man3/bfdel.3
	ln -s bfnew.3 $(DESTDIR)$(mandir)/man3/bfnew_quick.3
	ln -s bfnew.3 $(DESTDIR)$(mandir)/man3/bfnew_ones.3
	ln -s bf2str.3 $(DESTDIR)$(mandir)/man3/str2bf.3
	ln -s bf2str.3 $(DESTDIR)$(mandir)/man3/str2bf_ip.3
	ln -s bf2str.3 $(DESTDIR)$(mandir)/man3/bf2str_ip.3
	ln -s bf2int.3 $(DESTDIR)$(mandir)/man3/bf2int_ip.3
	ln -s bf2int.3 $(DESTDIR)$(mandir)/man3/int2bf.3
	ln -s bf2int.3 $(DESTDIR)$(mandir)/man3/int2bf_ip.3
	ln -s bf2long.3 $(DESTDIR)$(mandir)/man3/bf2long_ip.3
	ln -s bf2long.3 $(DESTDIR)$(mandir)/man3/long2bf.3
	ln -s bf2long.3 $(DESTDIR)$(mandir)/man3/long2bf_ip.3
	ln -s bfshift.3 $(DESTDIR)$(mandir)/man3/bfshift_ip.3
	ln -s bfand.3 $(DESTDIR)$(mandir)/man3/bfnot.3
	ln -s bfand.3 $(DESTDIR)$(mandir)/man3/bfnot_ip.3
	ln -s bfand.3 $(DESTDIR)$(mandir)/man3/bfor.3
	ln -s bfand.3 $(DESTDIR)$(mandir)/man3/bfxor.3
	ln -s bfsetall.3 $(DESTDIR)$(mandir)/man3/bfclearall.3
	ln -s bfsetbit.3 $(DESTDIR)$(mandir)/man3/bfclearbit.3
	ln -s bfrev.3 $(DESTDIR)$(mandir)/man3/bfrev_ip.3
	ln -s bfsetbit.3 $(DESTDIR)$(mandir)/man3/bfgetbit.3
	ln -s bfsetbit.3 $(DESTDIR)$(mandir)/man3/bftogglebit.3

uninstall:
	for i in bfdel.3 bfnew_quick.3 bfnew_ones.3 str2bf.3 str2bf_ip.3 bf2str_ip.3 bfshift_ip.3 bfnot.3 bfnot_ip.3 bfor.3 bfxor.3 bfclearall.3 bfclearbit.3 bfrev_ip.3 bfgetbit.3 bftogglebit.3 bf2int_ip.3 int2bf.3 int2bf_ip.3 bf2long_ip.3 long2bf.3 long2bf_ip.3; do if [ -e $(DESTDIR)$(mandir)/man3/$$i ]; then rm -v $(DESTDIR)$(mandir)/man3/$$i; fi; done
	for i in $(man_MANS); do if [ -e $(DESTDIR)$(mandir)/man3/$$i ]; then rm -v $(DESTDIR)$(mandir)/man3/$$i; fi; done

distclean:
	rm Makefile
